	month = feb,
	year = {2018},
	pmid = {29454392},
	pmcid = {PMC5816520},
	keywords = {Humans, Robotics, C6, Equipment Design, Exoskeleton Device, Hand, Motor Disorders, Rehabilitation, Soft robotics, Wearable robots},
	pages = {9},
	file = {Full Text:C\:\\Users\\nicey\\Zotero\\storage\\45X489N7\\Chu and Patterson - 2018 - Soft robotic devices for hand rehabilitation and a.pdf:application/pdf;Soft robotic devices for hand rehabilitation and assistance\: a narrative review:C\:\\Users\\nicey\\Zotero\\storage\\MPNCFFL7\\chu2018.pdf.pdf:application/pdf},
